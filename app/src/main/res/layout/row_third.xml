<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@null"
	android:weightSum="10">
	
	<View
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="0.5"/>

	<Button
		android:id="@+id/btn_a"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:text="a"
		android:tag="Ata@"
		android:layout_margin="@dimen/margin_button"
		android:padding="@dimen/padding_button"
		android:textColor="@color/text_color"
		android:textAllCaps="false"/>

	<Button
		android:id="@+id/btn_s"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:text="s"
		android:tag="Asterisks*"
		android:layout_margin="@dimen/margin_button"
		android:padding="@dimen/padding_button"
		android:textColor="@color/text_color"
		android:textAllCaps="false"/>

	<Button
		android:id="@+id/btn_d"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:text="d"
		android:tag="Exclamation Markd!"
		android:layout_margin="@dimen/margin_button"
		android:padding="@dimen/padding_button"
		android:textColor="@color/text_color"
		android:textAllCaps="false"/>

	<Button
		android:id="@+id/btn_f"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:text="f"
		android:tag="Number Signf#"
		android:layout_margin="@dimen/margin_button"
		android:padding="@dimen/padding_button"
		android:textColor="@color/text_color"
		android:textAllCaps="false"/>

	<Button
		android:id="@+id/btn_g"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:text="g"
		android:tag="Colong:"
		android:layout_margin="@dimen/margin_button"
		android:padding="@dimen/padding_button"
		android:textColor="@color/text_color"
		android:textAllCaps="false"/>

	<Button
		android:id="@+id/btn_h"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:text="h"
		android:tag="Semicolonh;"
		android:layout_margin="@dimen/margin_button"
		android:padding="@dimen/padding_button"
		android:textColor="@color/text_color"
		android:textAllCaps="false"/>

	<Button
		android:id="@+id/btn_j"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:text="j"
		android:tag="Underscorej_"
		android:layout_margin="@dimen/margin_button"
		android:padding="@dimen/padding_button"
		android:textColor="@color/text_color"
		android:textAllCaps="false"/>

	<Button
		android:id="@+id/btn_k"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:text="k"
		android:tag="Left Parenthesisk("
		android:layout_margin="@dimen/margin_button"
		android:padding="@dimen/padding_button"
		android:textColor="@color/text_color"
		android:textAllCaps="false"/>

	<Button
		android:id="@+id/btn_l"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:text="l"
		android:tag="Right Parenthesisl)"
		android:layout_margin="@dimen/margin_button"
		android:padding="@dimen/padding_button"
		android:textColor="@color/text_color"
		android:textAllCaps="false"/>

	<View
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="0.5"/>

</LinearLayout>