<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="@android:style/Theme.Material.Light.NoActionBar.Fullscreen">

	</style>

    <style name="InputStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">false</item>
        <item name="android:background">#00000000</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>

    <style name="RegistrationInputStyle" parent="InputStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LoginInputStyle" parent="InputStyle">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="LineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginBottom">17dp</item>
    </style>

    <style name="LoginLineStyle" parent="LineStyle">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="RegistrationLineStyle" parent="LineStyle">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">25dp</item>
    </style>

</resources>
