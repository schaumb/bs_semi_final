<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="@android:style/Theme.Material.Light.NoActionBar.Fullscreen">

	</style>

    <style name="InputStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RegistrationInputStyle" parent="InputStyle">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LoginInputStyle" parent="InputStyle">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="LineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginBottom">17dp</item>
    </style>

    <style name="LoginLineStyle" parent="LineStyle">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="RegistrationLineStyle" parent="LineStyle">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">17dp</item>
        <item name="android:fontFamily">sans-serif-black</item>

    </style>

</resources>
